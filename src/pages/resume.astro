<style>
	.resume {
		max-width: 900px;
		margin: 0 auto;
		padding: 2rem;
		line-height: 1.6;
		color: #333;
	}

	.container {
		background: white;
		padding: 3rem;
		border-radius: 8px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}

	.resume-header {
		text-align: center;
		margin-bottom: 3rem;
		padding-bottom: 2rem;
		border-bottom: 2px solid #e5e7eb;
	}

	.resume-header h1 {
		font-size: 3rem;
		margin-bottom: 0.5rem;
		color: #1f2937;
		font-weight: 700;
	}

	.subtitle {
		font-size: 1.25rem;
		color: #6b7280;
		margin-bottom: 1.5rem;
		font-weight: 500;
	}

	.contact-info {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1.5rem;
		font-size: 0.95rem;
	}

	.contact-item span {
		color: #4b5563;
	}

	.contact-item a {
		color: #3b82f6;
		text-decoration: none;
	}

	.contact-item a:hover {
		text-decoration: underline;
	}

	.summary {
		margin-bottom: 3rem;
	}

	.summary blockquote {
		font-size: 1.1rem;
		font-style: italic;
		color: #374151;
		margin: 0 0 1.5rem 0;
		padding: 1.5rem;
		background: #f9fafb;
		border-left: 4px solid #3b82f6;
		border-radius: 0 4px 4px 0;
	}

	.summary p {
		color: #4b5563;
		font-size: 1rem;
	}

	section {
		margin-bottom: 3rem;
	}

	section h2 {
		font-size: 1.75rem;
		color: #1f2937;
		margin-bottom: 1.5rem;
		padding-bottom: 0.5rem;
		border-bottom: 2px solid #e5e7eb;
		font-weight: 600;
	}

	.item {
		margin-bottom: 2rem;
		padding-bottom: 1.5rem;
		border-bottom: 1px solid #f3f4f6;
	}

	.item:last-child {
		border-bottom: none;
		margin-bottom: 0;
	}

	.item-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 0.5rem;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.item h3 {
		font-size: 1.25rem;
		color: #1f2937;
		margin: 0;
		font-weight: 600;
	}

	.date {
		color: #6b7280;
		font-weight: 500;
		font-size: 0.95rem;
	}

	.institution {
		font-weight: 600;
		color: #374151;
		font-size: 1.05rem;
		margin-bottom: 0.25rem;
	}

	.location {
		color: #6b7280;
		font-size: 0.9rem;
		margin-bottom: 0.75rem;
	}

	.item ul {
		margin: 0;
		padding-left: 1.25rem;
	}

	.item li {
		margin-bottom: 0.5rem;
		color: #4b5563;
	}

	.awards-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
	}

	.award-item {
		padding: 1.5rem;
		background: #f9fafb;
		border-radius: 6px;
		border-left: 4px solid #3b82f6;
	}

	.award-year {
		font-size: 1.5rem;
		font-weight: 700;
		color: #3b82f6;
		margin-bottom: 0.5rem;
	}

	.award-name {
		font-weight: 600;
		color: #1f2937;
		margin-bottom: 0.25rem;
	}

	.award-org {
		color: #374151;
		font-size: 0.95rem;
		margin-bottom: 0.25rem;
	}

	.award-location {
		color: #6b7280;
		font-size: 0.9rem;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1.5rem;
	}

	.skill-category {
		padding: 1.25rem;
		background: #f9fafb;
		border-radius: 6px;
		border-top: 3px solid #3b82f6;
	}

	.skill-category h4 {
		margin: 0 0 0.75rem 0;
		color: #1f2937;
		font-size: 1.1rem;
		font-weight: 600;
	}

	.skill-category span {
		color: #4b5563;
		font-size: 0.95rem;
	}

	@media (max-width: 768px) {
		.resume {
			padding: 1rem;
		}

		.container {
			padding: 1.5rem;
		}

		.resume-header h1 {
			font-size: 2rem;
		}

		.contact-info {
			flex-direction: column;
			align-items: center;
			gap: 0.75rem;
		}

		.item-header {
			flex-direction: column;
			align-items: flex-start;
		}

		.awards-grid,
		.skills-grid {
			grid-template-columns: 1fr;
		}
	}
</style>